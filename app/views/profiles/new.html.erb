<header>
    <%= render "partial/login-nav" %>
</header>

<main class="profile-main">
    <%= render "partial/errors_messages" %>
    
    <div class="profile">
        <%= image_tag current_user.avatar.url, alt: "user-icon", class: "user_icon", size: "100x100" %>
        <p class="profile-name"><%= current_user.name %></p>
        <p class="profile-text"><%= current_user.profile_text %></p>
        <p class="profile-link"><%= link_to "プロフィールを編集", edit_profile_path, class: "profile-edit" %></p>
    </div>
    
    <section class="p-space"></section>
    
    <div class="p-links">
        <p class="my-crafts"><%= link_to "投稿一覧", profile_path, class: "thanks-link"%></p>
        <p class="my-thanks">ありがとう一覧</p>
    </div>
    
    <div class="card-list">
        <ul class="my-card">
            <% @thanks.each do |thank|%>
                <div class="one-card">
                    <li class="card-img"><%= link_to (image_tag(asset_path("#{craft.image}"))),  user_craft_path(current_user,@thanks) %></li>
                    <li class="card-title"><%= link_to thank.title.truncate(10),  user_craft_path(current_user,@thanks) %></li>
                    <li class="card-name"><%= link_to thank.user.name.truncate(10), user_craft_path(current_user,@thanks) %></li>
                </div>
            <% end %>
        </ul>
    </div>
    
    <%= paginate @thanks %>
    
</main>

<footer>
    <div class="footer-left">
        <ul class="f-nav">
            <li><%= link_to '利用規約', page_path('rules') %></li>
            <li><%= link_to 'プライバシーポリシー', page_path('policy') %></li>
            <li><%= link_to "お問い合わせ", new_contact_path %></li>
            <li class="logout-mypage"><%= link_to 'ログアウト', logout_path, method: :delete %></li>
            <li><%= link_to "退会について", delete_path(current_user.id) %></li>
        </ul>
    </div>
    <div class="footer-right">
        <small>&copy 2024 Iroha All Rights Reserved.</small>
    </div>
</footer>