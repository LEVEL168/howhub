<% if craft.thanked_by?(current_user) %>
    <%= link_to user_craft_thanks_path(:user_id, :craft_id), method: :delete, remote: true do %>
        <i class="fas fa-star" aria-hidden="true" style="color: #fcc800;"></i>
        <%= craft.thanks.count %> ありがとう
    <% end %>
<% else %>
    <%= link_to user_craft_thanks_path(:user_id,:craft_id), method: :post, remote: true do %>
        <i class="fas fa-star" aria-hidden="true"></i>
        <%= craft.thanks.count %> ありがとう
    <% end %>
<% end %>