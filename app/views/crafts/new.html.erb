<header>
    <%= render "partial/login-nav" %>
</header>

<main>
    <h3>新規投稿作成</h3>
    
    <%= form_with(model: [current_user, @craft], local: true) do |form| %>
        <%= render "partial/errors_messages", model: form.object %>
        <div class="image">
            <%= form.label :image, "画像を追加" %>
            <%= form.file_field :image, class: "craft_img", accept: 'image/*' %>
            <%= form.hidden_field :image_cache %>
        </div>
        <p class="attention">jpg/jpeg/png 2MBまで<br>
            ※投稿後の画像の編集はできません</p>
        
        <div class="title">
            <%= form.label :title, "タイトル" %><span class="necessary">*</span>
            <%= form.text_field :title, class: "form-text", placeholder:"タイトル", style: "width:100%" %>
            <%= form.hidden_field :title_cache %>
        </div>
        
        <div class="f-caption">
            <%= form.label :caption, "キャプション" %><span class="necessary">*</span>
            <%= form.text_area :caption, class: "form-text", placeholder:"投稿内容の補足や検索ワードなど", style: "width:100%", rows: "15" %>
            <%= form.hidden_field :caption_cache %>
        </div>
        
        <div class="submit-btn">
            <%= form.submit "投稿する", class: "submit" %>
        </div>
    <% end %>
 
</main>